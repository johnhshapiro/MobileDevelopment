<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoard">

    <TextView
        android:id="@+id/leader_scores"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal"
        android:textColor="@color/plainBlack"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leader_board_label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/leader_names"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:textColor="@color/plainBlack"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/leader_scores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leader_board_label" />

    <TextView
        android:id="@+id/leader_board_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/plainBlack"
        android:gravity="center"
        android:text="@string/leader"
        android:textColor="@color/plainWhite"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>